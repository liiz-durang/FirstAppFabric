<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <br>
        <h1>Ledger Demo</h1>
        <h2>Read Asset</h2>  
        <br>
        
        <form class="bg-success-subtle p-3 mb-3" method="POST" action="/read_a">
            
            <div class="mb-3">
                <label for="input1" class="form-label">Name Asset:</label>
                <input type="text" class="form-control" id="input1" placeholder="asset13" name="input1" required>
            </div>

            
            <button type="submit" class="btn btn-primary">Read</button>      
        </form>

        <%if(answer.length > 1){%>
            <div class="bg-success-subtle p-2 mb-3">
            <br>
                <p><%=answer%></p>
            
            </div>

            <div class="bg-success-subtle p-3 mb-3">
                        
                    <p><b> ID: </b> <%= result2.ID %></p>
                    <p> <b> Owner: </b> <%= result2.Owner %></p>
                    <p> <b> Color: </b> <%= result2.Color %></p>
                    <p> <b> Size: </b> <%= result2.Size %></p>
                    <p> <b> AppraisedValue: </b><%= result2.AppraisedValue %></p>
                
                        
            </div>
        <% } %>
        
        <%if(answer.length == 1){%>
            <div class="bg-success-subtle p-2 mb-3">
                <br>
                <p>Asset not found</p>
                
            </div>
        <% } %>


    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>